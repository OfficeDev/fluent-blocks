{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Radio button group",
  "description": "An element for gathering an input of one choice out of a group of choices.",
  "allOf": [
    { "$ref": "./input-properties.json" },
    {
      "properties": {
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": "string",
              "label": { "$ref": "../phrasing-content/phrasing-content.json" }
            },
            "required": ["value", "label"],
            "additionalProperties": false
          },
          "minItems": 1
        },
        "initialValue": "string"
      },
      "required": ["options"],
      "additionalProperties": false
    }
  ],
  "additionalProperties": false
}
